#PYTHON VARIBLES:empty containers in which you store your values:
a=6
b="aAngelina"
print(a)
print(b)
print(a,b)
x=(8)
print(x)
#varible names:
#car_name,car_1,car1,Car_Name

#camel case:each word, except the first starts with a capitol letter
myCarName="Tesla"
print(myCarName)
#pascal case:each word stats with a capitol letter
MyCarName="honda"
print(MyCarName)
#snake case:each word is seperated with an underscore
My_Car_Name="honda"
print(My_Car_Name)

#assign multiple values:
a,b,c=1,2,3
print(a)
print(b)
print(c)
x,y,z="apple","pear","peach"
print(x)
print(y)
print(z)
x=y=z=8
print(x)
print(y)
print(z)
#unpack a collection:
fruits=["apple", "pear","cherry"]
x,y,z=fruits
print(x)
print(y)
print(z)

#output varibles:
h="python"
o="workin"
d="good"
print(h,o,d)

h="python "
o="workin "
d="good"
print(h+o+d)

myCarName="tesla"
print(myCarName)

MyCarName="honda"
print(MyCarName)

